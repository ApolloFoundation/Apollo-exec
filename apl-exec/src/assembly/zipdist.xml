<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>zipdist</id>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>${zip-file-name}</baseDirectory>
    <formats>
        <format>${zip-format}</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../bin</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../updater</directory>
            <outputDirectory>updater</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>CHANGELOG*</include>
                <include>VERSION</include>
                <include>Wallet.url</include>
                <include>favicon.ico</include>
                <include>3RD-PARTY-LICENSES.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/conf/</directory>
            <outputDirectory>doc</outputDirectory>
        </fileSet>

    </fileSets>
    <files> <!-- we need main jar to stay in top dir because we have classpath in it pointing to lib dir -->
        <file>
            <source>${project.build.directory}/apl-exec-${project.version}.jar</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>${project.groupId}:apl-*:jar:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>